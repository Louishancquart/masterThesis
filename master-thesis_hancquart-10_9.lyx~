        ObjectInputStream ios = new ObjectInputStream(bais);
\end_layout

\begin_layout Plain Layout

        type = ios.readUTF();
\end_layout

\begin_layout Plain Layout

        list = (ArrayList<?>) ios.readObject();
\end_layout

\begin_layout Plain Layout

    }
